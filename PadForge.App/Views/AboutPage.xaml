<UserControl x:Class="PadForge.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <ScrollViewer Padding="24,16">
        <StackPanel MaxWidth="600">

            <TextBlock Text="About PadForge" Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,20"/>

            <!-- App identity -->
            <Border Style="{StaticResource CardBorder}" Padding="24" Margin="0,0,0,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="PadForge" FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Controller Mapping Utility"
                               FontSize="14" Opacity="0.7"
                               HorizontalAlignment="Center" Margin="0,4,0,12"/>

                    <TextBlock HorizontalAlignment="Center" Opacity="0.5" FontSize="12">
                        <Run Text="Modern fork of x360ce â€” rebuilt with SDL3, WPF, and .NET 8"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Description -->
            <Border Style="{StaticResource CardBorder}" Padding="20" Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap" LineHeight="22" Opacity="0.85">
                    PadForge maps any controller to virtually any other controller type
                    via ViGEmBus and vJoy. It uses SDL3 for robust device enumeration and input,
                    and provides a modern Fluent Design interface for mapping, dead zone
                    configuration, and force feedback management.
                </TextBlock>
            </Border>

            <!-- Technologies -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="&#xE74C;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Built With" Style="{StaticResource SubtitleTextBlockStyle}"/>
            </StackPanel>
            <Border Style="{StaticResource CardBorder}" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text=".NET 8" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Runtime and WPF framework" Opacity="0.7"/>

                    <TextBlock Grid.Row="1" Text="SDL3" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Cross-platform device input"
                               Opacity="0.7" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="2" Text="ViGEmBus" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="Virtual controller driver (Xbox 360, DualShock 4)"
                               Opacity="0.7" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="3" Text="vJoy" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="Virtual joystick driver for custom HID output"
                               Opacity="0.7" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="4" Text="ModernWpf" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="Fluent Design theme for WPF"
                               Opacity="0.7" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="5" Text="MVVM Toolkit" FontWeight="SemiBold" Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="5" Grid.Column="1"
                               Text="CommunityToolkit.Mvvm for data binding"
                               Opacity="0.7" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- License -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="License" Style="{StaticResource SubtitleTextBlockStyle}"/>
            </StackPanel>
            <Border Style="{StaticResource CardBorder}" Padding="20" Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap" Opacity="0.75" FontSize="12" LineHeight="18">
                    This software is provided under the MIT License.
                    Portions derived from x360ce, which is licensed under the MIT License.
                    SDL3 is licensed under the zlib License.
                    ViGEmBus is licensed under the MIT License.
                    vJoy is licensed under the MIT License.
                </TextBlock>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

<Application x:Class="PadForge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:conv="clr-namespace:PadForge.Converters"
>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources>
                    <ui:ThemeResources.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="RangeSliderThumbFill" Color="#F0F0F0"/>
                            <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FFE0E0E0"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="RangeSliderThumbFill" Color="#F0F0F0"/>
                            <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF3A3A3A"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <SolidColorBrush x:Key="RangeSliderThumbFill" Color="#F0F0F0"/>
                            <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF3A3A3A"/>
                        </ResourceDictionary>
                    </ui:ThemeResources.ThemeDictionaries>
                </ui:ThemeResources>
                <ui:XamlControlsResources />
                <ResourceDictionary Source="/Resources/ControllerIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <conv:AxisToPercentConverter x:Key="AxisToPercentConverter" />
            <conv:PovToAngleConverter x:Key="PovToAngleConverter" />
            <conv:NormToCanvasConverter x:Key="NormToCanvasConverter" />
            <conv:StatusToColorConverter x:Key="StatusToColorConverter" />
            <conv:BoolToInstallTextConverter x:Key="BoolToInstallTextConverter" />
            <conv:PercentToSizeConverter x:Key="PercentToSizeConverter" />
            <conv:NullToCollapsedConverter x:Key="NullToCollapsedConverter" />
            <conv:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <conv:NormToTriggerHeightConverter x:Key="NormToTriggerHeightConverter" />
            <conv:NormToTriggerSlideConverter x:Key="NormToTriggerSlideConverter" />
            <conv:StringToVisibilityConverter x:Key="StringToVisibility" />
            <conv:StringToGeometryConverter x:Key="StringToGeometry" />

        </ResourceDictionary>
    </Application.Resources>

</Application>

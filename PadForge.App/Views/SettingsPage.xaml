<UserControl x:Class="PadForge.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <ScrollViewer Padding="24,16">
        <StackPanel MaxWidth="700">

            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,20"/>

            <!-- ═══ Appearance ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE790;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Appearance" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Choose your preferred visual theme."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <TextBlock Text="Theme" FontSize="13" Margin="0,0,0,6"/>
                    <ComboBox SelectedIndex="{Binding SelectedThemeIndex}" Width="200">
                        <ComboBoxItem Content="System Default"/>
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- ═══ Engine ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE9F5;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Input Engine" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Configure polling behavior and background processing."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <CheckBox Content="Auto-start engine on launch"
                              IsChecked="{Binding AutoStartEngine}" Margin="0,0,0,8"/>
                    <CheckBox Content="Continue polling when window loses focus"
                              IsChecked="{Binding EnablePollingOnFocusLoss}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Polling interval:" VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ui:NumberBox Value="{Binding PollingRateMs, Mode=TwoWay}"
                                      Minimum="1" Maximum="16"
                                      SpinButtonPlacementMode="Inline" Width="120"/>
                        <TextBlock Text="ms" VerticalAlignment="Center" Margin="6,0,0,0"
                                   Opacity="0.6"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ═══ Motion Server ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xEC05;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Motion Server" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="DSU/cemuhook server for gyro and accelerometer data."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <CheckBox Content="Enable DSU motion server (cemuhook)"
                              IsChecked="{Binding EnableDsuMotionServer}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Port:" VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <ui:NumberBox Value="{Binding DsuMotionServerPort, Mode=TwoWay}"
                                      Minimum="1024" Maximum="65535"
                                      SpinButtonPlacementMode="Inline" Width="140"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding EnableDsuMotionServer, Converter={StaticResource BoolToColorConverter}}"
                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding DsuServerStatus}" FontSize="12"/>
                    </StackPanel>
                    <TextBlock Text="Provides gyro/accel data to Cemu, Dolphin, Yuzu, etc."
                               FontSize="12" Opacity="0.5" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- ═══ Window ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE737;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Window" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Startup and minimize behavior."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <CheckBox Content="Minimize to system tray"
                              IsChecked="{Binding MinimizeToTray}" Margin="0,0,0,8"/>
                    <CheckBox Content="Start minimized"
                              IsChecked="{Binding StartMinimized}" Margin="0,0,0,8"/>
                    <CheckBox Content="Start at login"
                              IsChecked="{Binding StartAtLogin}"/>
                </StackPanel>
            </Border>

            <!-- ═══ ViGEmBus ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE964;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="ViGEmBus Driver" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Virtual controller driver for Xbox 360 and DualShock 4 output."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8"
                                         Fill="{Binding IsViGEmInstalled, Converter={StaticResource BoolToColorConverter}}"
                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding ViGEmStatusText}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ViGEmVersion}" FontSize="12"
                                       Opacity="0.6" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Content="Install"
                                    Command="{Binding InstallViGEmCommand}"
                                    Visibility="{Binding IsViGEmInstalled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Uninstall"
                                    Command="{Binding UninstallViGEmCommand}"
                                    Visibility="{Binding IsViGEmInstalled, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ═══ HidHide ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xED1A;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="HidHide Driver" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Hide physical devices from games to prevent double input."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8"
                                         Fill="{Binding IsHidHideInstalled, Converter={StaticResource BoolToColorConverter}}"
                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding HidHideStatusText}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding HidHideVersion}" FontSize="12"
                                       Opacity="0.6" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Content="Install"
                                    Command="{Binding InstallHidHideCommand}"
                                    Visibility="{Binding IsHidHideInstalled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Uninstall"
                                    Command="{Binding UninstallHidHideCommand}"
                                    Visibility="{Binding IsHidHideInstalled, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ═══ Settings File ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Settings File" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Save, reload, or reset your configuration."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <TextBlock Text="{Binding SettingsFilePath}" FontSize="12"
                               FontFamily="Consolas" Opacity="0.7" TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Save" Command="{Binding SaveCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="Reload" Command="{Binding ReloadCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="Reset to Defaults" Command="{Binding ResetCommand}"
                                Margin="0,0,8,0"/>
                        <Button Content="Open Folder" Command="{Binding OpenSettingsFolderCommand}"/>
                    </StackPanel>

                    <TextBlock Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}"
                               Text="Unsaved changes" Foreground="Orange"
                               FontSize="12" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- ═══ Diagnostics ═══ -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Diagnostics" Style="{StaticResource CardTitle}"/>
                    </StackPanel>
                    <TextBlock Text="Application and runtime version information."
                               Style="{StaticResource CardDescription}" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="App Version" FontSize="12" Opacity="0.6"/>
                        <TextBlock Grid.Column="1" Text="{Binding ApplicationVersion}" FontSize="12"/>

                        <TextBlock Grid.Row="1" Text=".NET Runtime" FontSize="12"
                                   Opacity="0.6" Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding RuntimeVersion}" FontSize="12" Margin="0,4,0,0"/>

                        <TextBlock Grid.Row="2" Text="SDL Version" FontSize="12"
                                   Opacity="0.6" Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   Text="{Binding SdlVersion}" FontSize="12" Margin="0,4,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

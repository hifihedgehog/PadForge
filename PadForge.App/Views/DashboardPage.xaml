<UserControl x:Class="PadForge.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <ScrollViewer Padding="24,16">
        <StackPanel MaxWidth="960">

            <!-- Page header -->
            <TextBlock Text="Dashboard" Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,20"/>

            <!-- ═══ Engine status card ═══ -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Input Engine" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Ellipse Width="10" Height="10"
                                     Fill="{Binding EngineStatus, Converter={StaticResource StatusToColorConverter}}"
                                     Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding EngineStatus}" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="24,0"
                               Opacity="0.7">
                        <Run Text="{Binding PollingFrequencyText, Mode=OneWay}"/>
                    </TextBlock>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Opacity="0.6" FontSize="12">
                            <Run Text="{Binding OnlineDevices, Mode=OneWay}"/>
                            <Run Text="/"/>
                            <Run Text="{Binding TotalDevices, Mode=OneWay}"/>
                            <Run Text="devices online"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══ Virtual controller slot cards ═══ -->
            <TextBlock Text="Virtual Controllers" Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,8,0,12"/>

            <ItemsControl ItemsSource="{Binding SlotSummaries}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                CornerRadius="8" Padding="16" Margin="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Slot label + status -->
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8"
                                             Fill="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding SlotLabel}"
                                               FontWeight="SemiBold" FontSize="15"/>
                                </StackPanel>

                                <!-- Device name -->
                                <TextBlock Grid.Row="1" Text="{Binding DeviceName}"
                                           Opacity="0.7" Margin="0,6,0,0"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- Status row -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock Text="{Binding StatusText}"
                                               FontSize="12" Opacity="0.5"/>
                                    <TextBlock FontSize="12" Opacity="0.5" Margin="12,0,0,0">
                                        <Run Text="{Binding MappedDeviceCount, Mode=OneWay}"/>
                                        <Run Text="mapped,"/>
                                        <Run Text="{Binding ConnectedDeviceCount, Mode=OneWay}"/>
                                        <Run Text="connected"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ═══ Driver status ═══ -->
            <TextBlock Text="Drivers" Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,20,0,12"/>

            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ViGEmBus" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="{Binding ViGEmStatusText}" Opacity="0.7"/>

                    <TextBlock Grid.Row="1" Text="HidHide"
                               FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding HidHideStatusText}" Opacity="0.7"
                               Margin="0,8,0,0"/>

                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>

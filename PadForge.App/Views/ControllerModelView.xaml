<UserControl x:Class="PadForge.Views.ControllerModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Core.Wpf">

    <Grid>
        <helix:HelixViewport3D x:Name="ModelViewPort"
                               IsRotationEnabled="True"
                               IsPanEnabled="False"
                               IsMoveEnabled="False"
                               IsZoomEnabled="True"
                               ShowViewCube="False"
                               ZoomExtentsWhenLoaded="True"
                               Background="Transparent"
                               MouseLeftButtonDown="Viewport_MouseLeftButtonDown">

            <helix:SunLight />
            <helix:DirectionalHeadLight Brightness="0.35" />

            <ModelVisual3D x:Name="ModelVisual3D" />

            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera FieldOfView="35"
                                   LookDirection="0,-1,0"
                                   Position="0,200,0"
                                   UpDirection="0,0,1" />
            </helix:HelixViewport3D.Camera>
        </helix:HelixViewport3D>

        <!-- Reset View button -->
        <Button Content="Reset View"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,8,8,0"
                Padding="8,4"
                Opacity="0.6"
                Click="ResetView_Click" />
    </Grid>
</UserControl>
